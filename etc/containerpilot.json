{
  "consul": "{{ if .CONSUL_AGENT }}localhost{{ else }}{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}{{ end }}:8500",
  "logging": {
    "level": "{{ if .LOG_LEVEL }}{{ .LOG_LEVEL }}{{ else }}INFO{{ end }}"
  },
  "services": [
    {
      "name": "natsboard",
      "port": 3000,
      "exec": ["/usr/local/bin/manage.sh", "onStart"],
      "health": ["/usr/local/bin/manage.sh", "health"],
      "poll": 5,
      "ttl": 25,
      "restarts": "unlimited"
    },
    {
      "name": "consul-agent",
      "exec": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-log-level=err",
                  "-rejoin",
                  "-retry-join", "{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }
  ],
  "backends": [
    {
      "name": "nats",
      "poll": 3,
      "onChange": ["/usr/local/bin/manage.sh", "onChange"]
    }
  ]
}
